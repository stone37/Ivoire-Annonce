<section class="container">
    {{ include('ui/_flashes_message.html.twig') }}
</section>
<section class="container user-thread-list mb-5">
    {% if threads|length > 0 %}
        <div class="row user-thread-list mb-5">
            {% for thread in threads %}
                <div class="col-12 col-md-6 col-lg-4">
                    {{ include('user/message/index/_box.html.twig') }}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="row d-flex justify-content-center mb-5">
            <div class="col-12 col-md-8 text-center my-5 mt-md-5">
                <h4 class="h4-responsive font-weight-bold text-dark">
                    Vous n'avez aucune conversation !
                </h4>
            </div>
        </div>
    {% endif %}
</section>