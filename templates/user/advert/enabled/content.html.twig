<section class="container">
    {{ include('ui/_flashes_message.html.twig') }}
</section>
<section class="container advert-list mb-5">
    {% if adverts|length > 0 %}
        <div class="row">
            {% for advert in adverts %}
                <div class="col-12 col-md-6">
                    {{ include('user/advert/enabled/_box.html.twig') }}
                </div>
            {% endfor %}
            <div class="col-12 d-flex justify-content-center mt-2">
                {{ knp_pagination_render(adverts, 'ui/_pagination.html.twig') }}
            </div>
        </div>
    {% else %}
        <div class="row d-flex justify-content-center mb-5">
            <div class="col-12 col-md-8 text-center mt-5 mt-md-5">
                <h4 class="h4-responsive font-weight-bold text-dark">
                    Vous n'avez aucune annonce en ligne pour le moment.
                </h4>
                <p>
                    C'est ici que vous verrez toutes vos annonces en ligne. <br>
                    Pourquoi ne pas <a href="{{ path('app_switch_category') }}" class="link font-weight-stone-600">publier une annonce</a>
                    maintenant ?
                </p>
            </div>
        </div>
    {% endif %}
</section>