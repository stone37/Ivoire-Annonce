{% form_theme form 'Ui/Form/theme.html.twig' %}

{{ form_start(form) }}
<div class="modal fade" id="entity-search" tabindex="-1" role="dialog" aria-labelledby="confirm" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content text-center">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold text-dark">Filtres</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body pt-0">
                {% include 'admin/user/filter/form.html.twig' %}
            </div>
            <div class="modal-footer d-flex justify-content-between">
                {% if type == 1 %}
                    {% set path = path('app_admin_user_index') %}
                {% elseif type == 2 %}
                    {% set path = path('app_admin_user_no_confirm_index') %}
                {% elseif type == 3 %}
                    {% set path = path('app_admin_user_deleted_index') %}
                {% endif %}

                <a href="{{ path }}" class="btn btn-danger btn-md">
                    <i class="fas fa-times mr-1"></i> Effacer
                </a>
                <button type="submit" class="btn btn-secondary btn-md">
                    <i class="fas fa-check mr-1"></i>
                    Appliquer
                </button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form, {'render_rest': false}) }}



