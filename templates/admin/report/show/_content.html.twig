{% import 'Ui/Macro/buttons.html.twig' as buttons %}

<div class="row app-user mt-5">
    <div class="col-12">
        <table class="table table-sm table-bordered table-responsive-sm table-responsive-md">
            <tbody>
            <tr>
                <td class="table-dark text-center font-weight-normal">Id</td>
                <td class="text-center font-weight-normal">{{ report.id }}</td>
                <td class="table-dark text-center font-weight-normal">Email</td>
                <td class="text-center font-weight-normal">{{ report.email }}</td>
                <td class="table-dark text-center font-weight-normal">Raison</td>
                <td class="text-center font-weight-normal">{{ report.reason }}</td>
            </tr>
            <tr>
                <td class="table-dark text-center font-weight-normal">Commentaire</td>
                <td colspan="7" class="text-center font-weight-normal">{{ report.content|raw }}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

