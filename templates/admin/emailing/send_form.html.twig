<div class="form-row">
    <div class="col-12 col-md-6">
        {{ form_row(form.destinataire) }}
    </div>
    <div class="col-12 col-md-6">
        {{ form_row(form.subject) }}
    </div>
</div>

<div class="row d-flex justify-content-center justify-content-md-start mt-4">
    <div class="col-12 col-md-12">
        <div class="grey-text " style="margin-bottom: -25px;">{{ form_label(form.content) }}</div>
        <div class="md-form md-outline">
            {{ form_widget(form.content) }}
            <div class="red-text font-weight-stone-500">{{ form_errors(form.content) }}</div>
        </div>
    </div>
</div>

