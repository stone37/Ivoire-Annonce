{% import 'Ui/Macro/messages.html.twig' as message %}

{{ form_start(form) }}
<div class="modal fade" id="confirmPayoutModal" tabindex="-1" role="dialog" aria-labelledby="confirmMulti" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-notify {{ configuration.modal.pay.type }}" role="document">
        <div class="modal-content text-center">
            <div class="modal-header d-flex justify-content-center">
                {{ message.modal(message) }}
            </div>
            <div class="modal-body">
                <div class="mt-3"><i class="{{ configuration.modal.pay.icon }} fa-4x animated rotateIn"></i></div>
                <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
            </div>
            <div class="modal-footer flex-center">
                <button type="submit" class="btn {{ configuration.modal.pay.yes_class }} font-weight-stone waves-effect">Oui</button>
                <button type="button" class="btn {{ configuration.modal.pay.no_class }} font-weight-stone" data-dismiss="modal">Non</button>
            </div>
        </div>
    </div>
</div>
