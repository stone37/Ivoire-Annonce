{% if category.slug == 'villas' or category.slug == 'studios' or
      category.slug == 'maisons' or category.slug == 'maisons-de-vacances' or
      category.slug == 'espaces-commerciaux-et-bureaux' or category.slug == 'colocations' or
      category.slug == 'chambres' or category.slug == 'appartements' or
      category.slug == 'appartements-meubles' %}
    <div class="form-row mt-3">
        <div class="col-12 immobilier-state-field">
            <h6 class="font-weight-stone-600 text-dark">{{ form.immobilierState.vars.label }}</h6>
            <div class="btn-group" data-toggle="buttons">
                {% for choices in form.immobilierState.vars.choices %}
                    <label for="{{ form.immobilierState.vars.id }}_{{ loop.index0 }}" class="btn btn-sm btn-amber z-depth-0 form-check-label">
                        <input class="form-check-input" type="radio" value="{{ choices.value }}"
                               name="{{ form.immobilierState.vars.full_name }}" id="{{ form.immobilierState.vars.id }}_{{ loop.index0 }}" autocomplete="off"
                               {% if app.request.query.has('immobilierState') %}{% if app.request.query.get('immobilierState') == choices.value %}checked{% endif %}{% endif %} >
                        {{ choices.label }}
                    </label>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}

