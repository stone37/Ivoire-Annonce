        <div class="col-12">
            <h6 class="font-weight-bold text-dark year-title">Année</h6>
        </div>
        <div class="col-12 d-flex align-items-center">
            {{ form_widget(form.autoYear.min_year) }}
            <span class="text-muted"> - </span>
            {{ form_widget(form.autoYear.max_year) }}
        </div>
    </div>
{% endif %}

