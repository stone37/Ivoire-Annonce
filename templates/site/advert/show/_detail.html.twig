        </div>
    {% endif %}

    {% if advert.nombrePorte %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Nombre de portes</div>
            <div class="content">
                {{ advert.nombrePorte }}
            </div>
        </div>
    {% endif %}

    {% if advert.nombrePlace %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Nombre de places</div>
            <div class="content">
                {{ advert.nombrePlace }}
