        </div>
    {% endif %}

    {% if advert.cylindre %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Cylindrée</div>
            <div class="content">
                {{ advert.cylindre }} Cm3
            </div>
        </div>
    {% endif %}

    {% if advert.autreInformation %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Autres informations</div>
            <div class="content">
                {% for data in advert.autreInformation %}
                    {{ data }} {% if not loop.last %}, {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}

    {% if advert.sex %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Sexe</div>
            <div class="content">
                {{ advert.sex }}
            </div>
        </div>
    {% endif %}
</section>




