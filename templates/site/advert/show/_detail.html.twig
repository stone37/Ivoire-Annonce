    {% endif %}

    {% if advert.autoYear %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Année</div>
            <div class="content">
                {{ advert.autoYear }}
            </div>
        </div>
    {% endif %}

    {% if advert.autoType %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">Type de véhicule</div>
            <div class="content">
                {{ advert.autoType }}
            </div>
        </div>
    {% endif %}

    {% if advert.autoState %}
        <div class="col-6 col-md-4 col-lg-3">
            <div class="title">État du véhicule</div>
            <div class="content">
                {{ advert.autoState }}
