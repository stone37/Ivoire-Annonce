<section class="container-fluid advert-view-header mt-lg-3 mb-2">
    <div class="row">
        <div class="col-12 col-lg-9">
            <h4 class="h4-responsive font-weight-bold text-dark title">{{ advert.title }}</h4>
            <div class="price">
                {{ advert.price|format_currency('XOF') }}
                {% if advert.priceState %}
                    <span class="detail">
                        à débattre
                    </span>
                {% endif %}
            </div>
        </div>
        <div class="col-12 col-lg-3 text-right">
            <div class="location">
                <i class="fas fa-map-marker-alt"></i>
                {{ advert.location.city }}
                {% if advert.location.town %}({{ advert.location.town }}){% endif %}
            </div>
            <div class="validate-at">Publiée {{ advert.validatedAt|ago }}</div>
        </div>
    </div>
</section>
