{% form_theme form 'Ui/Form/theme.html.twig' %}

<div class="container-fluid my-md-5 mb-5">
    <div class="card card-cascade narrower">
        <div class="view view-cascade bg-primary text-white z-depth-1">
            <h3 class="h3-responsive font-weight-bold px-3 px-lg-4 pt-3 pb-2">
                Créer une annonce {{ advert.category.name }}
                {% if advert.subCategory|length > 0 %}- {{ advert.subCategory.name}}{% endif %}
            </h3>
        </div>
        <div class="card-body card-body-cascade p-3">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'advert-form', 'class': 'advert-form'}}) }}

            {{ include('site/advert/form/' ~ view) }}

            <div class="text-center mx-1 mx-md-3 small-9 dark-grey-text mt-4 mb-3">
                En cliquant sur "Publier votre annonce", vous confirmer avoir lu et accepté nos
                <a href="{{ path('app_cgu') }}" class="font-weight-stone-600 link">conditions d'utilisation</a>,
                notre <a href="" class="font-weight-stone-600 link">politique de confidentialité</a> et nos
                <a href="" class="font-weight-stone-600 link pl-0">charte du bon annonceur</a>. <br>
                Veuillez ne pas publier d'annonces en double.
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary font-weight-stone-500 z-depth-0 mb-2">
                    Publier votre annonce <i class="fas fa-paper-plane ml-2"></i>
                </button>
            </div>

            {{ form_widget(form._token) }}
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>
</div>