<div class="modal fade" id="navbar-locale-menu-modal" tabindex="-1" role="dialog" aria-labelledby="confirm" aria-hidden="true">
    <div class="modal-dialog modal-mobile" role="document">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h5 class="heading font-weight-stone-600 text-dark">SÃ©lectionnez votre langue</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #bdbdbd !important">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body py-1">
                {% if locales|length > 0 %}
                    <ul class="list-group list-group-flush">
                        {% for code in locales %}
                            <li class="list-group-item">
                                <a href="{{ path('app_switch_locale', {'code': code}) }}"
                                   {% if code is same as(active) %}class="active"{% endif %}>
                                    <span class="d-flex justify-content-between">
                                        <span>{{ code|language_name|capitalize }}</span>
                                        {% if code is same as(active) %}<i class="fas fa-check"></i>{% endif %}
                                    </span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
</div>

