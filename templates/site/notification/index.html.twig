<li class="nav-item dropdown notification d-none d-lg-block">
    <div class="icon {% if not nbUnread %}d-none{% endif %}"><i class="fas fa-circle"></i></div>
    <a class="nav-link dropdown-toggle" id="navbarDropdownNotificationMenuLink" data-toggle="dropdown"
       aria-haspopup="true" aria-expanded="false">
        <i class="far fa-bell"></i>
    </a>
    <div class="dropdown-menu dropdown-primary dropdown-menu-right scrollbar scrollbar-primary" aria-labelledby="navbarDropdownNotificationMenuLink">
        <h5 class="dropdown-header font-weight-stone-600 px-2 mb-2">Notifications</h5>
        <div id="notification-bulk" class="notification-bulk">

            {% if notifications|length > 0 %}
                {% for notification in notifications %}
                    <a class="dropdown-item d-flex" href="{{ notification.url }}">
                        <div class="content">
                            <div class="data">{{ notification.message|raw }}</div>
                            <div class="time">{{ notification.createdAt|ago }}</div>
                        </div>
                        {% if notification.read %}
                            <div class="icon-notification ml-auto d-flex align-items-center pl-3"><i class="fas fa-circle"></i></div>
                        {% endif %}
                    </a>
                {% endfor %}
            {% else %}
                <div class="mb-4 text-center grey-text not-notification-bulk">
                    <div><i class="far fa-bell fa-3x"></i></div>
                    <div class="font-weight-stone-500 mt-3">Vous n'avez aucune notification</div>
                </div>
            {% endif %}
        </div>
    </div>
</li>

