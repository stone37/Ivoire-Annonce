<section class="container">
    <div class="row mb-5">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    {% for label, messages in app.flashes %}
                        {% if label == 'error' %}{% set label = 'danger' %}{% endif %}

                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show mb-3" role="alert">
                                {{ message }}
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}

                    <h1 class="h1-responsive display-3 mb-5 text-center font-weight-bold text-dark">Se connecter</h1>
                    <form method="post">
                        {% if error %}
                            <div class="text-center text-danger font-weight-stone-500">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mx-1 mx-md-3">
                            <div class="md-form md-outline form-lg input-with-pre-icon">
                                <i class="fas fa-envelope input-prefix"></i>
                                <input type="text" value="{{ last_username }}" name="email" id="inputEmail"
                                       class="form-control form-control-lg" required autofocus>
                                <label for="inputEmail">Nom d'utilisateur ou e-mail</label>
                            </div>

                            <div class="md-form md-outline form-lg input-with-pre-icon mb-0">
                                <i class="fas fa-unlock input-prefix"></i>
                                <i class="fas fa-eye input-prefix"></i>
                                <input type="password" id="inputPassword" name="password" required
                                       class="form-control form-control-lg"  />
                                <label for="inputPassword">Mot de passe</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                            <div class="text-right">
                                <a href="{{ path('app_password_reset') }}" class="link small-9 font-weight-stone-500">Mot de passe oublié ?</a>
                            </div>

                            <div class="switch stone-switch">
                                <label for="remember_me">
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" checked />
                                    <span class="lever"></span>
                                    Se souvenir de moi
                                </label>
                            </div>
                            <div class="text-center mt-3">
                                <button type="submit" name="_submit" class="btn btn-primary">Se connecter</button>
                            </div>
                        </div>
                    </form>

                    <section class="d-flex align-content-center mt-lg-4 mb-lg-3 mx-md-5 px-lg-5">
                        <hr class="w-100" style="border-color: #f5f5f5; border-width: 2px;">
                        <div class="h5-responsive font-weight-stone-500 text-center grey-text px-2">Ou</div>
                        <hr class="w-100" style="border-color: #f5f5f5; border-width: 2px;">
                    </section>

                    <section class="mb-3">
                        <h4 class="h4-responsive text-dark font-weight-stone-600 text-center mb-4">Utiliser les réseaux sociaux</h4>
                        <div class="mx-md-5 px-lg-5">
                            <a class="btn btn-outline-grey btn-google btn-block mb-4 d-none d-md-inline-block" href="{{ path('oauth_connect', {service: 'google'}) }}">
                                <img src='https://developers.google.com/identity/images/g-logo.png' class="img-fluid mr-1 my-0" alt="Google icon">
                                Se connecter avec Google
                            </a>
                            <a class="btn btn-outline-grey btn-sm btn-google btn-block mb-4 d-inline-block d-md-none" href="{{ path('oauth_connect', {service: 'google'}) }}">
                                <img src='https://developers.google.com/identity/images/g-logo.png' class="img-fluid mr-1 my-0" alt="Google icon">
                                Se connecter avec Google
                            </a>

                            <a href="{{ path('oauth_connect', {service: 'facebook'}) }}" class="btn btn-primary btn-facebook btn-block mb-1 d-none d-md-inline-block">
                                <i class="fab fa-facebook-square mr-1"></i>
                                Se connecter avec Facebook
                            </a>

                            <a href="{{ path('oauth_connect', {service: 'facebook'}) }}" class="btn btn-primary btn-sm btn-facebook btn-block mb-1 d-inline-block d-md-none">
                                <i class="fab fa-facebook-square mr-1"></i>
                                Se connecter avec Facebook
                            </a>
                        </div>
                    </section>

                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <h5 class="h5-responsive text-dark font-weight-stone-600 pb-2">
                        Vous n'avez pas de compte ?
                    </h5>
                    <div>
                        Créer un compte dès maintenant pour créer, modifier et gérer vos annonces.
                        C'est facile, rapide et gratuit !
                    </div>
                    <div class="mt-3">
                        <a href="{{ path('app_register') }}" class="btn btn-primary">S'inscrire</a>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body text-center small">
                    <h5 class="h5-responsive text-dark font-weight-stone-600 mb-2">
                        Protégez votre compte
                    </h5>
                    <div>
                        Assurez vous que l'URL indiqués dans votre navigateur commence toujours par
                        <strong class="text-dark font-weight-stone-600">https://{{ config.name|slug('')|lower }}.com</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



